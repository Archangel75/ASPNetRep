@model MyReviewProject.Models.ChangeLoginViewModel
@{
    ViewBag.Title = "Смена пароля";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeLogin", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{ 
    @Html.AntiForgeryToken()
<h4>Форма смены логина</h4>
<hr />
    <h4>Ваш текущий логин @Model.OldLogin</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewLogin, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewLogin, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Смена логина" class="btn btn-default" />
        </div>
    </div>
}