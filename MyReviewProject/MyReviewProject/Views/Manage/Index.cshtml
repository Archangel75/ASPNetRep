@model MyReviewProject.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Здравствуйте, @Model.userLogin !</h4>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <hr />
        <dd>@Html.ActionLink("Изменить данные", "EditUser")</dd>
        <hr />
    </dl>

    <hr />

    @if (User.IsInRole("Admin"))
    {
    <div>
        <h4>Войти в капище</h4>
        <dd>@Html.ActionLink("Капище","Index", "Admin")</dd>
    </div>        
    }
</div>